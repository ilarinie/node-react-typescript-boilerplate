{
  "name": "node-express-typecript-boilerplate",
  "version": "0.0.10",
  "description": "node-express-typecript-boilerplate",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "NODE_ENV=production; node dist/index.js",
    "build": "rm -rf dist && npm install && $(npm bin)/tsc -p .&& mkdir dist/public && cd client && npm install && npm run build && cp -r build/* ../dist/public",
    "watch": "NODE_ENV=test; nyc --reporter html mocha -w --recursive --require ts-node/register --watch-extensions ts,tsx \"src/test/**/*.{ts,tsx}\" ",
    "server-tests": "nyc mocha --recursive --require ts-node/register \"server/test/**/*.{ts,tsx}\"",
    "client-tests": "cd client && npm run test",
    "integration-tests": "sh run_integration_tests.sh",
    "test": "NODE_ENV=test; npm run server-tests && npm run client-tests && npm run integration-tests"
  },
  "author": "ilari.nieminen@outlook.com",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/request-ip": "0.0.33",
    "@types/response-time": "^2.3.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^4.1.0",
    "cypress": "^3.3.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "env-var": "^4.0.1",
    "express": "^4.17.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "response-time": "^2.3.2",
    "typeorm": "^0.2.18",
    "winston": "^3.2.1"
  },
  "nyc": {
    "check-coverage": false,
    "reporter": [
      "lcov"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.ts",
      "src/db/index.ts",
      "src/db/seed.ts"
    ],
    "extension": [
      ".ts"
    ],
    "all": true
  }
}
